# =============================================================================
# OpenBMC Learning Platform - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD@db:5432/openbmc_learning?schema=public
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# Redis (for caching and sessions)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# JWT secret for signing tokens (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# NextAuth configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# Session duration in seconds (default: 7 days)
SESSION_MAX_AGE=604800

# -----------------------------------------------------------------------------
# Email (for password reset, verification)
# -----------------------------------------------------------------------------
# SMTP configuration
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@your-domain.com

# -----------------------------------------------------------------------------
# NotebookLM Integration (Optional)
# -----------------------------------------------------------------------------
# MCP server URL for NotebookLM integration
# NOTEBOOKLM_MCP_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# API rate limit (requests per minute)
API_RATE_LIMIT=60

# AI features rate limit (requests per hour)
AI_RATE_LIMIT=20

# -----------------------------------------------------------------------------
# Docker/Infrastructure
# -----------------------------------------------------------------------------
# Ports (for docker-compose)
HTTP_PORT=80
HTTPS_PORT=443

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable features
FEATURE_NOTEBOOKLM=true
FEATURE_CODE_SANDBOX=false
FEATURE_BROWSER_TTS=true
